[push]
  default = simple
  autoSetupRemote = true
[alias]
  c = commit --no-verify
  lint = !lint
  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
  amend = commit --amend
  graph = log --graph -20 --branches --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  precommit = diff --cached --diff-algorithm=minimal -w
  back = checkout @{-1}
  preview = diff @{upstream}
[url "\"git@github.com:\""]
	insteadOf = \"https://github.com/\"
[rerere]
	enabled = true
